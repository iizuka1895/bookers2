<body>
  
  <main>
    <p id="notice"></p>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <%= render 'books/list', books: @books %>
        
        <div class="col-md-8 offset-md-1">
          <h2>Users</h2>
          
          <% @users.each do |user| %>
          
            <table class="table">
              <thead>
                <tr>
                  <th>image</th>
                  <th>name</th>
                  <th></th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
                    <%= image_tag user.get_profile_image(100,100) %>
                  </td>
                  <td>
                    <%= user.name %>
                  </td>
                  <td>
                    <%= link_to user_path(user.id) do %>
                      <%= 'show' %>
                    <% end %>
                  </td>
                </tr>
              </tbody>
          
          <% end %>
          </table>
        </div>
      </div>
    </div>
  </main>
</body>