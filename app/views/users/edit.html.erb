<body>
  
  <main>
    
    <h2>User info</h2>
    
    <%= form_with model: @user do|f| %>
      <h4>Name</h4>
        <%= f.text_field :name %>
      <h4>Image</h4>
        <%= f.file_field :profile_image, accept: "image/*" %>
      <h4>Intoroduction</h4>
        <%= f.text_area :caption %>
        <%= f.submit 'Update User' %>
    <% end %>
      
  </main>
  
</body>
