
<body>
  
  <main>
    
    <h2>Editing Book</h2>
    
    <%= form_with model: @books do|f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Update Book' %>
    <% end %>
