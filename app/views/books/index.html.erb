<body>
  
  <header>
    <span>Bookers</span>
  </header>
  
  <main>
     <%= render 'list', books: @books %>
    
    <div>
      <h1>Books</h1>
      
      <% @books.each do |book| %>
        <div>
          
          <%= image_tag book.user.get_profile_image(100,100) %>
          
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
          
          <p>Title</p>
            <%= book.title %>
          <p>Opinion</p>
            <%= book.body %>
          </div>
      <% end %>
    </div>
    
  </main>
  
</body>