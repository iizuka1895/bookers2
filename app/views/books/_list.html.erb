    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tr>
          <th>Name</th>
          <th><%= @user.name %></th
        </tr>
        <tr>
          <th>Intoroduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <div class="row">
        <% if @user == current_user %>
          <%= link_to "User info", edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" %>
        <% else %>
          <%= link_to "User info", user_path(current_user), class: "btn btn-outline-secondary btn-block" %>
        <% end %>
      </div>
      <h2>New book</h2>

      <%= form_with model: Book.new do |f| %>

      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>
  
      <div class="form-group">
        <label for="book-opinion">Opinion</label>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>