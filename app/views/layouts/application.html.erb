<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      
    <% if user_signed_in? %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", root_path, class: 'navbar-brand' %>
          
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li>
                <%= link_to 'Home', "/users/#{@user.id}", class: 'nav-link text-light' %>
              </li>
              <li>
                <%= link_to "Users", users_path, class: 'nav-link text-light' %>
              </li>
              <li>
                <%= link_to "Books", books_path, class: 'nav-link text-light' %>
              </li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <% else %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", root_path, class: 'navbar-brand' %>
          
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li>
                <%= link_to "Home", root_path, class: 'nav-link text-light' %>
              </li>
              <li>
                <%= link_to "About", about_path, class: 'nav-link text-light' %>
              </li>
              <li>
                <%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-light' %>
              </li>
              <li>
                <%= link_to "Log in", new_user_session_path, class: 'nav-link text-light' %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <% end %>
  </header>
  
  <main>
    <%= yield %>
  </main>
  
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
  
  </body>
</html>
